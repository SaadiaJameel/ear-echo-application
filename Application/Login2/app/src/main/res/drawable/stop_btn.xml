<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background red square with rounded corners -->
    <item android:left="-130dp" android:right="-130dp" android:top="-130dp" android:bottom="-130dp">

        <shape android:shape="rectangle">
            <solid android:color="#DF4D4D" /> <!-- Red color -->
            <corners android:radius="16dp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>

    <!-- White outline for the inner square -->
    <item android:left="120dp" android:right="120dp" android:top="120dp" android:bottom="120dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- White color -->
            <corners android:radius="16dp"/>
            <stroke
                android:width="20dp"
                android:color="@color/white"/>
        </shape>
    </item>

</layer-list>

